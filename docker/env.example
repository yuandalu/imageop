# 服务器配置
PORT=5000                    # 容器内部端口
EXTERNAL_PORT=5000           # 宿主机外部端口
NODE_ENV=production

# 文件上传配置
MAX_FILE_SIZE=104857600  # 最大文件大小 (字节) 默认: 100MB
MAX_FILES=100            # 最大文件数量 默认: 100个

# 文件清理配置
FILE_RETENTION_TIME=1800000  # 文件保留时间 (毫秒) 默认: 30分钟
CLEANUP_INTERVAL=300000      # 清理检查间隔 (毫秒) 默认: 5分钟

# 目录配置
UPLOADS_DIR=../data/uploads      # 上传目录
COMPRESSED_DIR=../data/compressed # 压缩目录

# 示例配置值：
# MAX_FILE_SIZE=52428800   # 50MB
# MAX_FILES=50             # 50个文件
# FILE_RETENTION_TIME=3600000  # 60分钟
# CLEANUP_INTERVAL=600000      # 10分钟
